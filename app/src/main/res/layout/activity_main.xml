<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.android.tictactoe.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <include
        android:id="@+id/layout_top"
        layout="@layout/layout_top" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimaryDark">

        <Button
            android:id="@+id/row0_col0"
            style="@style/Button3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            tools:text="X" />

        <Button
            android:id="@+id/row0_col1"
            style="@style/Button3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/row0_col0"
            tools:text="O" />

        <Button
            android:id="@+id/row0_col2"
            style="@style/Button3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/row0_col1"
            tools:text="X" />

        <Button
            android:id="@+id/row1_col0"
            style="@style/Button3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/row0_col0"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            tools:text="O" />

        <Button
            android:id="@+id/row1_col1"
            style="@style/Button3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row0_col1"
            android:layout_marginBottom="4dp"
            android:layout_toRightOf="@id/row1_col0"
            tools:text="X" />

        <Button
            android:id="@+id/row1_col2"
            style="@style/Button3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/row0_col2"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/row1_col1"
            tools:text="O" />

        <Button
            android:id="@+id/row2_col0"
            style="@style/Button3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/row1_col0"
            android:layout_marginRight="4dp"
            tools:text="X" />

        <Button
            android:id="@+id/row2_col1"
            style="@style/Button3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/row1_col0"
            android:layout_toEndOf="@+id/row2_col0"
            android:layout_toRightOf="@+id/row2_col0"
            tools:text="O" />

        <Button
            android:id="@+id/row2_col2"
            style="@style/Button3x3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/row1_col2"
            android:layout_alignStart="@+id/row1_col2"
            android:layout_below="@+id/row1_col1"
            tools:text="X" />

    </RelativeLayout>

    <include layout="@layout/reset_button" />

</LinearLayout>