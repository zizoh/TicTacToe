<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context="com.example.android.tictactoe.MainActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar" />

    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/player_x_to_move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:clickable="true"
            android:onClick="playerXToMoveButton"
            android:elevation="4dp"
            android:paddingBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_x"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="@string/string_x"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/player_x_scoreboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/veryDarkGray"
                android:textSize="24sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/player_o_to_move"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:clickable="true"
            android:elevation="4dp"
            android:onClick="playerOToMoveButton"
            android:paddingBottom="4dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/player_o"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:text="@string/string_o"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@android:color/black"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/player_o_scoreboard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:text="-"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/veryDarkGray"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/player_to_move_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:text="@string/notice_board" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:paddingTop="16dp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:background="#00BFA5">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#009688">

            <Button
                android:id="@+id/row0_col0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="boardButtons"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#ffffff"
                android:textSize="56sp"
                tools:text="X"
                android:freezesText="true" />

            <Button
                android:id="@+id/row0_col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/row0_col0"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="boardButtons"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#ffffff"
                android:textSize="56sp"
                tools:text="O"
                android:freezesText="true" />

            <Button
                android:id="@+id/row0_col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/row0_col1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="boardButtons"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#ffffff"
                android:textSize="56sp"
                tools:text="X"
                android:freezesText="true" />

            <Button
                android:id="@+id/row1_col0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/row0_col0"
                android:layout_marginBottom="4dp"
                android:layout_marginRight="4dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="boardButtons"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#ffffff"
                android:textSize="56sp"
                tools:text="O"
                android:freezesText="true" />

            <Button
                android:id="@+id/row1_col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row0_col1"
                android:layout_marginBottom="4dp"
                android:layout_toRightOf="@id/row1_col0"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="boardButtons"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#ffffff"
                android:textSize="56sp"
                tools:text="X"
                android:freezesText="true" />

            <Button
                android:id="@+id/row1_col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/row0_col2"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@id/row1_col1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="boardButtons"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#ffffff"
                android:textSize="56sp"
                tools:text="O"
                android:freezesText="true" />

            <Button
                android:id="@+id/row2_col0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@id/row1_col0"
                android:layout_marginRight="4dp"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="boardButtons"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#ffffff"
                android:textSize="56sp"
                tools:text="X"
                android:freezesText="true" />

            <Button
                android:id="@+id/row2_col1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/row1_col0"
                android:layout_toEndOf="@+id/row2_col0"
                android:layout_toRightOf="@+id/row2_col0"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="boardButtons"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#ffffff"
                android:textSize="56sp"
                tools:text="O"
                android:freezesText="true" />

            <Button
                android:id="@+id/row2_col2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/row1_col2"
                android:layout_alignStart="@+id/row1_col2"
                android:layout_below="@+id/row1_col1"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:onClick="boardButtons"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:textColor="#ffffff"
                android:textSize="56sp"
                tools:text="X"
                android:freezesText="true" />

        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:clickable="true"
        android:onClick="resetButton"
        android:text="@string/restart_game"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold" />

</LinearLayout>

