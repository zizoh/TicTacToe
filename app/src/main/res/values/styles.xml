<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Style for 3x3 board buttons. -->
    <style name="Button3x3" parent="Widget.AppCompat.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:freezesText">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">56sp</item>
    </style>

    <!-- Style for 5x5 board buttons. -->
    <style name="Button5x5" parent="Widget.AppCompat.Button">
        <item name="android:minHeight">32dp</item>
        <item name="android:minWidth">56dp</item>-->
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:freezesText">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="AlertDialogCustom" parent="@android:style/Theme.Holo.Dialog.NoActionBar">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:typeface">monospace</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
